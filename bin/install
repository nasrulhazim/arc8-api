#!/usr/bin/env bash

clear
echo "ğŸ—ï¸  Building..."

# Check if there is keyword serve | dev
# By default both are false

SERVE=
SEED_DEV=

for var in "$@"
do
    if [[ $var = "serve" ]]; then
    	SERVE=true
    fi
    if [[ $var = "dev" ]]; then
    	SEED_DEV=true
    fi
done

VENDOR=vendor/
if [ ! -d "$VENDOR" ]; then
    composer install --quiet --no-ansi --no-interaction
	echo "ğŸ‰ Installed application dependencies"
fi

ENV=.env
if [ ! -f "$ENV" ]; then
    cp .env.example .env
    php artisan key:generate --quiet
	echo "ğŸ‰ Application key generated"
fi

if [[ $SEED_DEV ]]; then
	bin/reload-db $1
else
	bin/reload-db
fi

if [[ $SERVE ]]; then
	# MacOS with Valet Installed Only
	# Automagically register domain 
	bin/serve
fi

echo "ğŸ¢ Building Complete!"
